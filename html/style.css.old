@import url("https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,600;1,300&display=swap");
@import url("https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,500;1,400&display=swap");
@import url("https://rsms.me/inter/inter.css");
@import url("https://fonts.google.com/specimen/Bebas+Neue?preview.text=SHOP%20CREATOR&preview.text_type=custom&preview.size=25&query=bebas#standard-styles");

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

#shopCreatorUi {
  opacity: 0;
  transition: 0.5s ease-in-out opacity;
}

*:focus {
  outline: none;
}

.close {
  display: block;
  top: 0;
  margin-left: auto;
  height: 25px;
  width: 25px;
  border: none;
  background-color: #8f2626;
  border-left: 1px solid rgba(210, 210, 210, 0.8);
  border-bottom: 1px solid rgba(210, 210, 210, 0.8);
  color: white;
  transition: 0.4s ease-in-out background-color;
}

.close:hover {
  background-color: #8f26267c;
}

.container {
  display: block; /* block*/
  margin: auto;
  text-align: center;
  width: 950px;
  height: 390px;
  border: 3px solid #81c14b;
  background-color: #262322;
  margin-top: 15%;
}

.column {
  float: left;
  padding: 10px;
  height: 100%;
}

.left {
  width: 60%;
  border-right: 2px solid rgba(210, 210, 210, 0.8);
}

.right {
  width: 40%;
  height: 100%;
}

.row:after {
  content: "";
  display: table;
  clear: both;
  padding: 10px;
}

.visible-scrollbar {
  display: block;
  height: 13em;
  overflow: auto;
}

li {
  background-color: #333;
  color: white;
  list-style-position: inside;
  margin-bottom: 2px;
  padding: 4px 0 4px 10px;
  list-style-type: none;
  font-family: "Bebas Neue", cursive;
}

li:hover {
  background-color: #999;
}

.listContainer {
  text-align: left;
}

.title {
  font-size: 25px;
  font-weight: bold;
  text-align: center;
  margin-top: 15px;
  color: #fbfff1;
}

.label {
  font-size: 20px;
  font-weight: bold;
  text-align: center;
  margin-top: 15px;
  font-family: "Montserrat";
  color: #fbfff1;
}

.titleContainer {
  height: 40px;
  margin-top: -25px;
  font-family: "Rubik";
}

.create {
  height: 30px;
  width: 100px;
  border: none;
  background-color: #268f3a;
  color: white;
  border-radius: 2px;
  border: 1px solid #176325;
  font-family: "Montserrat";
  font-size: 8px;
}

.create:hover {
  background-color: #268f3980;
}

.cancel {
  height: 30px;
  width: 100px;
  border: none;
  background-color: #8f2626;
  color: white;
  border-radius: 2px;
  border: 1px solid #8f2626;
  font-family: "Montserrat";
  font-size: 8px;
}

.cancel:hover {
  background-color: #8f26267c;
}

.buttonContainer {
  margin-top: -20px;
  margin-left: -400px;
}

.credits {
  font-size: 13px;
  padding-left: 600px;
  margin-top: -7px;
  margin-left: 600px;
  font-family: "Rubik";
  font-weight: bold;
  color: #fbfff1;
}

.innerContainer {
  background-color: rgb(161, 161, 161);
  background-color: #7d7c7a;
  border-radius: 2px;
}

.scrollBar::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  background-color: rgb(161, 161, 161);
}

.scrollBar::-webkit-scrollbar {
  width: 12px;
  background-color: rgb(161, 161, 161);
}

.scrollBar::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
  background-color: #4e7a2a;
}

.upCity {
  color: rgba(182, 47, 189, 0.8);
}

#shopList > .shopItem > li {
  width: 30%;
}

.shopInput {
  width: 10%;
}

.shopItem {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.labelsContainer {
  font-size: 4px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #fbfff1;
  font-family: "Rubik";
}
